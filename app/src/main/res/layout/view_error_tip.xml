<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/constraintLayout2">

    <ImageView
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorBlack87"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

    <teamgodeater.hicarnet.Widget.RippleBackGroundView
        android:id="@+id/rippleView"
        app:text_color="@color/colorWhite"
        app:text_size="14dp"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>