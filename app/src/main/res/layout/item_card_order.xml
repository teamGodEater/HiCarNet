<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="378dp"
        android:layout_height="500dp"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_local_gas"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/iv_gas"
                app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout"
                android:layout_marginTop="16dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLocation"
                android:textSize="16dp"
                android:textColor="@color/colorBlack54"
                app:layout_constraintLeft_toRightOf="@+id/iv_gas"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/iv_gas"
                app:layout_constraintBottom_toBottomOf="@+id/iv_gas" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@+id/iv_gas"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_gas" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:id="@+id/view9"
            android:background="@color/colorBlack20"
            tools:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/iv_gas"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:id="@+id/view6"
            android:background="@color/colorBlack20"
            tools:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/ivStreet"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageView
            android:layout_width="108dp"
            android:layout_height="72dp"
            android:id="@+id/ivStreet"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view9"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="共计:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="12dp"
            android:textColor="@color/colorBlack54"
            app:layout_constraintLeft_toLeftOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:text="加油量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="12dp"
            android:textColor="@color/colorBlack54"
            app:layout_constraintLeft_toRightOf="@+id/ivStreet"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/ivStreet" />

        <TextView
            android:text="时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="12dp"
            android:textColor="@color/colorBlack54"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="种类:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="12dp"
            android:textColor="@color/colorBlack54"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvType"
            android:textSize="12dp"
            android:textColor="@color/colorBlack87"
            app:layout_constraintLeft_toLeftOf="@+id/tvDate"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jiayouliang"
            android:textSize="12dp"
            android:textColor="@color/colorBlack87"
            app:layout_constraintLeft_toRightOf="@+id/textView6"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:textSize="12dp"
            android:textColor="@color/colorBlack87"
            app:layout_constraintLeft_toLeftOf="@+id/tv_jiayouliang"
            app:layout_constraintTop_toBottomOf="@+id/tv_jiayouliang"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMoney"
            android:textSize="12dp"
            android:textColor="@color/colorBlack87"
            app:layout_constraintLeft_toLeftOf="@+id/tvType"
            app:layout_constraintTop_toBottomOf="@+id/tvType"
            android:layout_marginTop="8dp" />

        <ImageView
            android:src="@drawable/ic_keyboard_arrow_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/ivRight"
            app:layout_constraintTop_toTopOf="@+id/ivStreet"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivStreet" />

        <View
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/bgErWeiMa"
            android:background="@drawable/shape_erweima_background"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:src="@color/colorWhite10"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/ivErWeiMa"
            app:layout_constraintLeft_toLeftOf="@+id/bgErWeiMa"
            app:layout_constraintTop_toTopOf="@+id/bgErWeiMa"
            app:layout_constraintRight_toRightOf="@+id/bgErWeiMa"
            app:layout_constraintBottom_toBottomOf="@+id/bgErWeiMa" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderCode"
            android:textSize="24sp"
            android:textColor="@color/colorBlack87"
            app:layout_constraintLeft_toLeftOf="@+id/bgErWeiMa"
            app:layout_constraintTop_toBottomOf="@+id/bgErWeiMa"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/bgErWeiMa"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="16dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>