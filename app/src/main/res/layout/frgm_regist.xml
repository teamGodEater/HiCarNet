<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/constraintLayout">

    <View
        android:id="@+id/View"
        android:background="@color/color1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

    <teamgodeater.hicarnet.Widget.RoundedImageView
        android:padding="10dp"
        android:id="@+id/headImage"
        app:border_width="5dp"
        app:border_incolor="@color/colorWhite"
        android:src="@drawable/ic_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

    <TextView
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite87"
        android:text="* 设置你的头像"
        app:layout_constraintLeft_toLeftOf="@+id/headImage"
        app:layout_constraintTop_toBottomOf="@+id/headImage"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/headImage"
        android:layout_marginEnd="6dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/username"
        android:singleLine="true"
        android:background="@null"
        android:drawableBottom="@drawable/selector_bg_line_edittext"
        android:textSize="16dp"
        android:textColor="@color/colorBlack87"
        android:imeOptions="actionNext"
        android:selectAllOnFocus="false"
        android:hint="请输入用户名"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:textColorLink="@color/colorPrimary"
        android:textColorHint="@color/colorBlack20"
        android:textColorHighlight="@color/colorAccent"
        android:paddingRight="36dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="@+id/View"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="48dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/password"
        android:textSize="16dp"
        android:textColor="@color/colorBlack87"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:background="@null"
        android:drawableBottom="@drawable/selector_bg_line_edittext"
        android:selectAllOnFocus="false"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:textColorLink="@color/colorPrimary"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorBlack20"
        android:paddingRight="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="48dp"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/passwordConfirm"
        android:textSize="16dp"
        android:textColor="@color/colorBlack87"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@null"
        android:drawableBottom="@drawable/selector_bg_line_edittext"
        android:selectAllOnFocus="false"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:textColorLink="@color/colorPrimary"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorBlack20"
        android:paddingRight="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="48dp"
        tools:layout_constraintRight_creator="1" />

    <teamgodeater.hicarnet.Widget.RippleBackGroundView
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:text="注册"
        app:text_color="@color/colorWhite"
        app:text_size="14dp"
        android:id="@+id/sign"
        android:background="@color/color1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/passwordConfirm"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="48dp"
        tools:layout_constraintRight_creator="1" />

    <teamgodeater.hicarnet.Widget.RippleBackGroundView
        app:text="不了!下次再注册"
        app:text_color="@color/colorBlack54"
        app:text_size="14dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/backLogin"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="48dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:src="@drawable/search_ic_clear_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/cleanUsername"
        android:clickable="true"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/username"
        app:layout_constraintRight_toRightOf="@+id/username"
        app:layout_constraintBottom_toBottomOf="@+id/username" />

    <ImageView
        android:src="@drawable/search_ic_clear_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/cleanPassword"
        android:paddingBottom="8dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintBottom_toBottomOf="@+id/password" />

    <ImageView
        android:src="@drawable/ic_visibility"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/visiblePassword"
        android:paddingBottom="8dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/password"
        app:layout_constraintRight_toLeftOf="@+id/cleanPassword"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:src="@drawable/search_ic_clear_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/cleanPasswordConfirm"
        android:paddingBottom="8dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/passwordConfirm"
        app:layout_constraintRight_toRightOf="@+id/passwordConfirm"
        app:layout_constraintBottom_toBottomOf="@+id/passwordConfirm" />

</android.support.constraint.ConstraintLayout>