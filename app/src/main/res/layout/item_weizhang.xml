<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章内容"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="text"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/status"
            android:layout_marginEnd="24dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态"
            android:textColor="@color/colorBlack87"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintRight_toRightOf="@+id/status" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未处理"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@+id/info"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/colorBlack20"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/info"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章时间"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/occur_date"
            app:layout_constraintBottom_toBottomOf="@+id/occur_date" />

        <TextView
            android:id="@+id/occur_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-09-09 11:18:00"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/colorBlack20"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/occur_date"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章地点"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/textView12" />

        <TextView
            android:id="@+id/occur_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牛石嵌至交巡警大队路段"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:textColor="@color/colorBlack87"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="施恩"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/colorBlack20"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/occur_area"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执法机关"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/officer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重庆市公安局交通巡逻警察总队丰都大队"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginTop="8dp" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/colorBlack20"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/officer"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />



        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扣分"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/fen" />

        <TextView
            android:id="@+id/fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112421412424214124"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <View
            android:id="@+id/view7"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@color/colorBlack20"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罚款"
            android:textColor="@color/colorBlack87"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/money"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            android:layout_marginBottom="36dp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112421412424214124"
            android:textColor="@color/colorBlack54"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/view7"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>