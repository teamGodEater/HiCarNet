<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <teamgodeater.hicarnet.Widget.RoundedImageView
                    android:id="@+id/brandLogo"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/head_image"
                    app:border_width="3dp"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout1"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout1"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout1" />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="汽车品牌"
                    android:textColor="@color/colorBlack87"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout1"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout1"
                    app:layout_constraintTop_toBottomOf="@+id/brandLogo" />

                <TextView
                    android:id="@+id/license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:text="琼B88888"
                    android:textColor="@color/colorBlack54"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toTopOf="@+id/quickStar"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout1"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout1"
                    app:layout_constraintTop_toBottomOf="@+id/brand" />

                <LinearLayout
                    android:id="@+id/quickStar"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout1"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout1"
                    app:layout_constraintTop_toBottomOf="@+id/license">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <teamgodeater.hicarnet.Widget.RippleBackGroundView
                            android:id="@+id/toGas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout_editor_absoluteX="0dp"
                            tools:layout_editor_absoluteY="0dp" />

                        <ImageView
                            android:id="@+id/toGasImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_local_gas" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="8dp"
                            android:text="附近的加油站"
                            android:textColor="@color/colorWhite87"
                            android:textSize="12dp" />

                    </FrameLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorBlack20"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="11dp" />


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <teamgodeater.hicarnet.Widget.RippleBackGroundView
                            android:id="@+id/to4sShop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/to4sShopImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_directions_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="8dp"
                            android:text="附近的4s店"
                            android:textColor="@color/colorWhite87"
                            android:textSize="12dp" />
                    </FrameLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorBlack20"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="11dp" />


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <teamgodeater.hicarnet.Widget.RippleBackGroundView
                            android:id="@+id/toWeizhang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/toWeizhangImage"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_directions_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginBottom="8dp"
                            android:text="违章查询"
                            android:textColor="@color/colorWhite87"
                            android:textSize="12dp" />
                    </FrameLayout>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"

            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/cardView1">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/quickPreview"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toTopOf="@+id/constraintLayout2">

                    <TextView
                        android:id="@+id/gas"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="@color/colorBlack87"
                        android:textSize="36dp"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorBlack20"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="11dp" />

                    <TextView
                        android:id="@+id/mileage"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1520"
                        android:textColor="@color/colorBlack87"
                        android:textSize="32dp"
                        tools:layout_editor_absoluteX="4dp"
                        tools:layout_editor_absoluteY="4dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汽油量/%"
                    android:textColor="@color/colorBlack54"
                    android:textSize="12dp"
                    app:layout_constraintHorizontal_bias="0.22"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/quickPreview" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="里程数/Km"
                    android:textColor="@color/colorBlack54"
                    android:textSize="12dp"
                    app:layout_constraintHorizontal_bias="0.79"
                    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
                    app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@+id/quickPreview" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/performanceRecycleView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="@id/constraintLayout2"
                    app:layout_constraintRight_toRightOf="@id/constraintLayout2"
                    app:layout_constraintTop_toBottomOf="@id/textView1" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardElevation="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/otherRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>